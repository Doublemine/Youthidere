<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    >

    <ImageView android:src="@drawable/ic_info"
               android:layout_width="wrap_content"
               android:layout_height="72dp"
               android:layout_marginBottom="24dp"
               android:layout_gravity="center_horizontal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_account_info_image"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:src="@drawable/xiamo"
        app:civ_border_color="#4dd0e1"
        app:civ_border_width="1dp"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/activity_account_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:shadowColor="#BDBDBD"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="夏末"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/activity_account_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:shadowColor="#BDBDBD"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="wanghaokoko1994@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/activity_account_info_create_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shadowColor="#BDBDBD"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_gravity="center"
        android:shadowRadius="1"
        android:text="wanghaokoko1994@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginBottom="24dp"
        />


    

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_account_info_btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/accent"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="@string/activity_account_info_logout"/>

    <!--<TextView android:id="@+id/activity_login_link_signup"-->
              <!--android:layout_width="fill_parent"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:layout_marginBottom="24dp"-->
              <!--android:textColor="@color/iron"-->
              <!--android:text="@string/actvity_login_xml_link_signup"-->
              <!--android:gravity="center"-->
              <!--android:textSize="16dip"/>-->

</LinearLayout>
</ScrollView>