<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/cardViewBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:id="@+id/item_main_card_view_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_main"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/item_main_card_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingTop="3dp"
                android:text="尼克从小有腿部缺陷，家人记录了他从小到大的片段，从开始的痛苦到在球场上飞奔，最后那一幕很震撼"
                android:textColor="#424242"
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/item_main_card_view_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_create_date_18dp"
                    android:gravity="center"
                    android:padding="-5dp"
                    android:text="2015-11-24"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/item_main_card_view_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_categories_18dp"
                    android:drawablePadding="-5dp"
                    android:gravity="center"
                    android:text="图摘"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/item_main_card_view_read_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_read_time_18dp"
                    android:drawablePadding="-5dp"
                    android:gravity="center"
                    android:text="2088次阅读"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>