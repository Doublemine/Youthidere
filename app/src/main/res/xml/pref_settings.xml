<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="程序设置"
    android:layout="@layout/preference_item"
    >
    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="系统设置">

        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:title="列表自动加载更多"
            android:key="list_auto_load_more"
            android:summaryOn="当前状态为开启\n开启后，程序将会自动从服务器获取更多的数据以便于平滑浏览。"
            android:summaryOff="当前状态为关闭\n开启后，程序将会自动从服务器获取更多的数据以便于平滑浏览。"

            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:layout="@layout/preference_item"
            android:key="auto_load_image_on_mobile_network"
            android:title="非WiFI下自动加载图片"
            android:summaryOn="当前状态为开启\n为了保护您的流量，打开此选项后当程序检测到您在非WIFI情况下将会自动加载图片，此举会消耗您的数据流量。"
            android:summaryOff="当前状态为关闭\n为了保护您的流量，关闭此选项后当程序检测到您在非WIFI情况下将不会自动加载图片，而是需要您手动点击加载。"
            android:defaultValue="true"
            />
        
        <ListPreference
            android:layout="@layout/preference_item"
            android:key="cache_size"
            android:title="图片缓存大小"
            android:entries="@array/cache_name"
            
            android:entryValues="@array/cache_value"
            android:defaultValue="@string/cache_default_value"
            android:summary="程序将使用内部储存空间来缓冲储存临时文件,默认空间大小为50Mib。"
            />
        
        <Preference
            android:layout="@layout/preference_item"
            android:key="clearCache"
            android:title="清除缓存"
            android:summary="@string/pref_clearCache_summary"
            >
        </Preference>
    </PreferenceCategory>
    
    <PreferenceCategory
        android:layout="@layout/preference_category_widget"
        android:title="其它"
        >
        <Preference
            android:layout="@layout/preference_item"
            android:key="checkUpdate"
            android:title="检查更新"
            android:summary="手动检查更新">
            <!--<intent android:action="android.intent.action.VIEW"-->
                    <!--android:data="https://notes.wanghao.work"/>-->
        </Preference>
        <Preference
            android:layout="@layout/preference_item"
            android:key="visitBlog"
            android:title="关于作者"
            android:summary="欢迎访问我的博客">
            <intent android:action="android.intent.action.VIEW"
                    android:data="https://notes.wanghao.work"/>
        </Preference>
        
    </PreferenceCategory>
    
    

</PreferenceScreen>